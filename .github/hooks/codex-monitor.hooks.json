{
  "version": 1,
  "sessionStart": [
    {
      "type": "command",
      "command": [
        "node",
        "scripts/codex-monitor/agent-hook-bridge.mjs",
        "--agent",
        "copilot",
        "--event",
        "sessionStart"
      ],
      "timeout": 60
    }
  ],
  "sessionEnd": [
    {
      "type": "command",
      "command": [
        "node",
        "scripts/codex-monitor/agent-hook-bridge.mjs",
        "--agent",
        "copilot",
        "--event",
        "sessionEnd"
      ],
      "timeout": 60
    }
  ],
  "preToolUse": {
    "*": [
      {
        "type": "command",
        "command": [
          "node",
          "scripts/codex-monitor/agent-hook-bridge.mjs",
          "--agent",
          "copilot",
          "--event",
          "preToolUse"
        ],
        "timeout": 300
      }
    ]
  },
  "postToolUse": {
    "*": [
      {
        "type": "command",
        "command": [
          "node",
          "scripts/codex-monitor/agent-hook-bridge.mjs",
          "--agent",
          "copilot",
          "--event",
          "postToolUse"
        ],
        "timeout": 120
      }
    ]
  }
}
