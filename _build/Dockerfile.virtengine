FROM golang:1.25.5-alpine AS build

RUN apk add --no-cache ca-certificates git

WORKDIR /src
COPY go.mod go.sum ./
COPY sdk/go/go.mod sdk/go/go.sum sdk/go/
COPY sdk/specs/go.mod sdk/specs/
RUN go mod download

COPY . .

ARG TARGETOS=linux
ARG TARGETARCH=amd64
ENV CGO_ENABLED=0 GOOS=${TARGETOS} GOARCH=${TARGETARCH}

RUN go build -trimpath -buildvcs=false -ldflags "-s -w" -o /out/virtengine ./cmd/virtengine

FROM alpine:3.20
LABEL "org.opencontainers.image.source"="https://github.com/virtengine-network/node"

RUN apk add --no-cache bash ca-certificates curl jq && \
    addgroup -S virtengine && \
    adduser -S -G virtengine -u 10001 virtengine && \
    mkdir -p /var/lib/virtengine && \
    chown -R virtengine:virtengine /var/lib/virtengine

ENV HOME=/var/lib/virtengine
WORKDIR /var/lib/virtengine
VOLUME ["/var/lib/virtengine", "/tmp"]

COPY --from=build /out/virtengine /usr/local/bin/virtengine

USER 10001:10001

EXPOSE 26656 26657 26658 1317 9090 9091
