---
version: v2
modules:
  - path: go/vendor
    includes:
      - go/vendor/k8s.io/apimachinery/pkg/api/resource
    lint:
      use: []
    breaking:
      use: []
      ignore:
        - go/vendor/k8s.io/apimachinery/pkg/api/resource
  - path: go/vendor/github.com/cosmos/gogoproto
    includes:
      - go/vendor/github.com/cosmos/gogoproto/gogoproto
    lint:
      use: []
    breaking:
      use: []
  - path: go/vendor/github.com/cosmos/gogoproto/proto
    lint:
      use: []
    breaking:
      use: []
  - path: go/vendor/github.com/cosmos/cosmos-sdk/proto
    lint:
      use: []
    breaking:
      use: []
  - path: go/vendor/github.com/cosmos/cosmos-proto/proto
    lint:
      use: []
    breaking:
      use: []
  - path: go/vendor/github.com/cosmos/ibc-go/v10/proto
    lint:
      use: []
    breaking:
      use: []
  - path: proto/node
    excludes:
      - proto/node/virtengine/audit/v1beta3
      - proto/node/virtengine/base/v1beta3
      - proto/node/virtengine/cert/v1beta3
      - proto/node/virtengine/deployment/v1beta3
      - proto/node/virtengine/deployment/v1beta5
      - proto/node/virtengine/escrow/v1beta3
      - proto/node/virtengine/market/v1beta4
      - proto/node/virtengine/market/v2beta1
      - proto/node/virtengine/provider/v1beta3
      - proto/node/virtengine/take/v1beta3
    breaking:
      use:
        - FILE
    lint:
      use:
        - STANDARD
        - COMMENTS
        - FILE_LOWER_SNAKE_CASE
      except:
        - UNARY_RPC
        - COMMENT_FIELD
        - SERVICE_SUFFIX
        - ENUM_VALUE_PREFIX
        - ENUM_VALUE_UPPER_SNAKE_CASE
        - ENUM_ZERO_VALUE_SUFFIX
        - RPC_REQUEST_STANDARD_NAME
  - path: proto/provider
    lint:
      use:
        - STANDARD
        - COMMENTS
        - FILE_LOWER_SNAKE_CASE
      except:
        - UNARY_RPC
        - COMMENT_FIELD
        - SERVICE_SUFFIX
        - PACKAGE_VERSION_SUFFIX
        - ENUM_VALUE_PREFIX
        - ENUM_VALUE_UPPER_SNAKE_CASE
        - ENUM_ZERO_VALUE_SUFFIX
        - RPC_REQUEST_STANDARD_NAME
deps:
  - buf.build/cosmos/ics23
  - buf.build/googleapis/googleapis
  - buf.build/protocolbuffers/wellknowntypes
  - buf.build/cosmwasm/wasmd
