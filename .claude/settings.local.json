{
  "permissions": {
    "allow": [
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(ls:*)",
      "Bash(gh api:*)",
      "Bash(go vet:*)",
      "Bash(*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(go:*)",
      "Bash(make:*)",
      "Bash(cd:*)",
      "Bash(go mod vendor:*)",
      "Bash(bash script/mainnet-from-tag.sh:*)",
      "Bash(bash:*)",
      "Bash(git config:*)",
      "Bash(make check-hooks:*)",
      "mcp__vibe_kanban__list_projects",
      "mcp__vibe_kanban__list_repos",
      "mcp__vibe_kanban__get_repo",
      "WebFetch(domain:github.com)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node scripts/codex-monitor/agent-hook-bridge.mjs --agent claude --event UserPromptSubmit"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node scripts/codex-monitor/agent-hook-bridge.mjs --agent claude --event PreToolUse"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node scripts/codex-monitor/agent-hook-bridge.mjs --agent claude --event PostToolUse"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node scripts/codex-monitor/agent-hook-bridge.mjs --agent claude --event Stop"
          }
        ]
      }
    ]
  }
}
